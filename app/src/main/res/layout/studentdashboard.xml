<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentDashboard"
    android:background="#12372A">


    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="274dp"
        android:layout_height="253dp"
        android:src="@drawable/phinlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <EditText
        android:id="@+id/stFirstName"
        android:layout_width="285dp"
        android:layout_height="54dp"
        android:background="@drawable/input_shapes"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="First Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#9CFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />


    <EditText
        android:id="@+id/stLastName"
        android:layout_width="285dp"
        android:layout_height="54dp"
        android:background="@drawable/input_shapes"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Last Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#9CFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <EditText
        android:id="@+id/stNum"
        android:layout_width="285dp"
        android:layout_height="54dp"
        android:background="@drawable/input_shapes"
        android:fontFamily="sans-serif-black"
        android:hint="Student Number"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#9CFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.651" />

    <Button
        android:id="@+id/genQr"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/shape_edit_text_background"
        android:backgroundTint="#FBFADA"
        android:fontFamily="sans-serif-black"
        android:text="Generate Qr"
        android:textColor="#12372A"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:background="@drawable/shape_edit_text_background"
        android:backgroundTint="#003E6213"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />


</androidx.constraintlayout.widget.ConstraintLayout>