<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotPass">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:background="@drawable/shape_edit_text_background"
        android:backgroundTint="#003E6213"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <EditText
        android:id="@+id/username"
        android:layout_width="285dp"
        android:layout_height="54dp"
        android:background="@drawable/input_shapes"
        android:drawableLeft="@drawable/st_ic"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Username"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#006781"
        android:textColorHint="#A1FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    <EditText
        android:id="@+id/password"
        android:layout_width="285dp"
        android:layout_height="54dp"
        android:background="@drawable/input_shapes"

        android:drawableLeft="@drawable/baseline_lock_24"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="New Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#006781"
        android:textColorHint="#A1FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536" />

    <EditText
        android:id="@+id/con_password"
        android:layout_width="285dp"
        android:layout_height="54dp"
        android:background="@drawable/input_shapes"

        android:drawableLeft="@drawable/baseline_lock_24"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#006781"
        android:textColorHint="#A1FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

    <Button
        android:id="@+id/C_acc"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_edit_text_background"
        android:backgroundTint="#FBFADA"
        android:fontFamily="sans-serif-black"
        android:text="Reset Password"
        android:textColor="#12372A"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <RadioGroup
        android:id="@+id/logInAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.225">


        <RadioButton
            android:id="@+id/teacher"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_shapes"
            android:buttonTint="#12372A"
            android:fontFamily="sans-serif-black"
            android:padding="6dp"
            android:shadowColor="#12372A"
            android:text="TEACHER"
            android:textColor="@color/white"
            android:textColorHighlight="#D1B103"
            android:textColorLink="#D1B103"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="421dp" />

        <RadioButton
            android:id="@+id/student"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_shapes"
            android:buttonTint="#12372A"
            android:checked="false"
            android:fontFamily="sans-serif-black"
            android:padding="6dp"
            android:shadowColor="#12372A"
            android:text="STUDENT"
            android:textColor="@color/white"
            android:textColorHighlight="#D1B103"
            android:textColorHint="#D1B103"
            android:textColorLink="#D1B103"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="201dp"
            tools:layout_editor_absoluteY="421dp" />


    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>